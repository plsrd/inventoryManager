extends layout 

block content 
  div(class='card w-96 bg-white shadow-xl mx-auto mt-10')
    form(action="", method="post" class="form-control w-full") 
      div(class='card-body')
        h2(class='card-title')= title 
        label(for="name" class='label') Item name: 
        input(type="text", class="input input-bordered input-primary w-full max-w-xs" name="name" placeholder='Name' value=(item && item.name ? item.name : '')) 
        label(for="description" class='label') Item description: 
        textarea(type='textarea' name="description" placeholder='A nice sentence' class="textarea textarea-primary")  #{item && item.description ? item.description : ''}

        label(class='label cursor-pointer') Category:
        div(class='flex flex-col')
          for category in categories
            label(for=category._id class="label cursor-pointer justify-start") 
              input(type='checkbox', class="checkbox checkbox-primary" me='category' id=category._id value=category._id checked=category.checked )
              span(class='label-text ml-5') #{category.name}
        label(for="price") Price:
        input(type="number" class='input input-bordered input-primary' name="price" value=(item && item.price ? item.price : ''))
        label(for="in_stock") Number in stock :
        input(type="number" class='input input-bordered input-primary' name="in_stock" value=(item && item.in_stock ? item.in_stock : ''))
        button(type="submit" class='btn btn-outline btn-success mt-5') Submit

  if errors   
    ul 
      for error in errors 
        li!= error.msg
extends layout 

block content 
  h1= title 

  form(action="", method="post" style='display:flex;flex-direction:column') 
    label(for="name") Item name: 
    input(type="text", name="name" placeholder='Name' value=(item && item.name ? item.name : '')) 
    label(for="description") Item description: 
    textarea(type='textarea' name="description" placeholder='A nice sentence')  #{item && item.description ? item.description : ''}

    label Category:
    div
      for category in categories
        div(style='display: inline; padding-right:10px;')
          input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
          label(for=category._id) #{category.name}
        
         
    
    label(for="price") Price:
    input(type="number", name="price" value=(item && item.price ? item.price : ''))
    label(for="in_stock") Number in stock :
    input(type="number", name="in_stock" value=(item && item.in_stock ? item.in_stock : ''))
    button(type="submit") Submit

  if errors   
    ul 
      for error in errors 
        li!= error.msg
extends layout 

block content 
  div(class="card w-96 bg-white shadow-xl mx-auto mt-10")
    div(class="card-body")
    
      h2(class="card-title")= category.name
      p(class='mb-3') #[strong SKU: ] #{category._id}
      p= category.description

      p(class='text-md font-bold mt-5') Items:
      div(class="avatar-group -space-x-3 overflow-visible")
        for item in category_items 
          if item.image
            a(class="avatar transition-transform duration-200 ease-in-out hover:scale-125" href=item.url)
              div(class="w-12")
                img(src=`/images/${item.image}`)
          else  
            a(class="avatar placeholder transition-transform duration-200 ease-in-out hover:scale-125" href=item.url)
              div(class="w-12 bg-neutral-focus text-neutral-content hover:ring ring-primary")
                span #{item.name.slice(0, 1)}

      
        else 
          p No items in this category
         

      div(class="card-actions justify-end")
        a(class='h-full flex-0 btn btn-ghost btn-circle p-0 m-0' href=category.url + '/update')
          svg(xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-pencil" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round")
            path(stroke="none" d="M0 0h24v24H0z" fill="none")
            path(d="M4 20h4l10.5 -10.5a1.5 1.5 0 0 0 -4 -4l-10.5 10.5v4")
            line(x1="13.5" y1="6.5" x2="17.5" y2="10.5")
        a(class='h-full flex-0 btn btn-ghost btn-circle p-0 m-0' href=category.url + '/delete')
          svg(xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round")
            path(stroke="none" d="M0 0h24v24H0z" fill="none")
            line(x1="4" y1="7" x2="20" y2="7")
            line(x1="10" y1="11" x2="10" y2="17")
            line(x1="14" y1="11" x2="14" y2="17")
            path(d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12")
            path(d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3")
